  <section class='cases w-full lg:w-9/12 mx-auto py-24'>
    <div>
      <div>
        <img src={item.image} />
        <h3>{item.title}</h3>
        <p>{item.subtitle}</p>
        <div>{item.content}</div>
      </div>
    </div>
  </section>

  <Contacts />
  <Footer />
