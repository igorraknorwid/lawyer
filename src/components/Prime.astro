---
import Burger from "./Burger";
import { PrimeData } from "../types";
const response = await fetch(
  "https://sheltered-river-97651.herokuapp.com/api/prime"
);
const awards_data = (await response.json()) as PrimeData;
const {title,subtitle,button} = awards_data.data.attributes;
---

<div class='prime'>
  <Burger client:load />
  <div
    class='absolute xl:top-10 left-0 right-0 flex gap-x-4 xl:gap-x-0 xl:justify-between items-center xl:h-[180px] pr-[90px] xl:pr-[300px] pl-4 xl:pl-10'
  >
    <a href='/'
      ><img src='/logo.svg' alt='logo' class='w-[100px] xl:w-[400px]' />
    </a>
    <div class='flex flex-col xl:text-[60px] text-white my-stroke'>
      <div class='uppercase'>Telefon do kontaktu:</div>
      <a class='' href='tel:123-456-7890'>123-456-7890</a>
    </div>
  </div>

  <div
    class='absolute top-[300px] flex flex-col justify-center text-white my-stroke ml-20 p-10'
  >
    <div class='text-center xl:text-[72px]'>
     {title}
    </div>
    <div class='text-center xl:text-[20px]'>    
      {subtitle}
    </div>
    <a class='text-center py-4 px-8 bg-[#d8380d] max-w-max m-auto'
      >{button}</a
    >
  </div>
</div>

<style>
  .prime {
    height: 100vh;
    background: url(/hero-lg.webp) no-repeat center / cover;
  }

  @media (max-width: 767px) {
    .prime {
      height: 700px;
      background: url(/hero-mini.webp) no-repeat center / cover;
    }
  }
</style>
